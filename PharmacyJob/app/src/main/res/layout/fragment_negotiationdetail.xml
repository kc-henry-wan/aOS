<?xml version="1.0" encoding="utf-8"?>
<ScrollView 
xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/backgroundColor"
        android:clickable="true"
        android:padding="16dp">

        <TextView
            android:id="@+id/labelJobID"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="Job Ref:"
            android:textAlignment="viewEnd"
            app:layout_constraintEnd_toStartOf="@+id/dataJobID"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="0.45" />

        <TextView
            android:id="@+id/dataJobID"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text=""
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/labelJobID"
            app:layout_constraintTop_toTopOf="@id/labelJobID"
            app:layout_constraintWidth_percent="0.55" />

        <TextView
            android:id="@+id/labelBranchName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="Branch Name:"
            android:textAlignment="viewEnd"
            app:layout_constraintEnd_toStartOf="@+id/dataBranchName"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/labelJobID"
            app:layout_constraintWidth_percent="0.45" />

        <TextView
            android:id="@+id/dataBranchName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text=""
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/labelBranchName"
            app:layout_constraintTop_toTopOf="@id/labelBranchName"
            app:layout_constraintWidth_percent="0.55" />

        <TextView
            android:id="@+id/labelAddress"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="Address:"
            android:textAlignment="viewEnd"
            app:layout_constraintEnd_toStartOf="@+id/dataAddress"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/dataBranchName"
            app:layout_constraintWidth_percent="0.45" />

        <TextView
            android:id="@+id/dataAddress"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text=""
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/labelAddress"
            app:layout_constraintTop_toTopOf="@id/labelAddress"
            app:layout_constraintWidth_percent="0.55" />


        <GridView
            android:id="@+id/jobGridView"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:gravity="center"
            android:horizontalSpacing="10dp"
            android:numColumns="3"
            android:stretchMode="columnWidth"
            android:verticalSpacing="10dp"
            app:layout_constraintTop_toBottomOf="@id/dataAddress" />

        <!-- Timeline Section -->
        <LinearLayout
            android:id="@+id/timeline_section"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/jobGridView"
            android:layout_marginTop="16dp"
            android:orientation="vertical"
            tools:layout_editor_absoluteX="16dp"
        android:gravity="center_horizontal"
        android:background="@android:color/white" >

            <!-- Original Rate -->
                <TextView
                    android:id="@+id/dataOriginalRate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#666666"
                    android:textStyle="bold"
        android:gravity="center" />

            <!-- Arrow -->
            <ImageView
                    android:id="@+id/arrow1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="4dp"
                android:scaleType="centerInside"
                android:src="@drawable/arrow_down_gray" />

            <!-- Proposed Rate -->
                <TextView
                    android:id="@+id/dataProposedRate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="#FF9800"
                    android:textStyle="bold"
        android:gravity="center" />

            <!-- Arrow -->
            <ImageView
                    android:id="@+id/arrow2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="4dp"
                android:scaleType="centerInside"
                android:src="@drawable/arrow_down_blue" />

            <!-- Counter Proposed Rate -->
                <TextView
                    android:id="@+id/dataCounterRate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#2196F3"
                    android:textStyle="bold"
        android:gravity="center" />

        </LinearLayout>


        <TextView
            android:id="@+id/labelRatePerMile"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="Rate Per Mile:"
            android:textAlignment="viewEnd"

            app:layout_constraintEnd_toStartOf="@+id/dataRatePerMile"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/timeline_section"
            app:layout_constraintWidth_percent="0.45" />

        <TextView
            android:id="@+id/dataRatePerMile"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text=""
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/labelRatePerMile"
            app:layout_constraintTop_toTopOf="@id/labelRatePerMile"
            app:layout_constraintWidth_percent="0.55" />

        <TextView
            android:id="@+id/labelLunchArrangement"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="Lunch Arrangement:"
            android:textAlignment="viewEnd"

            app:layout_constraintEnd_toStartOf="@+id/dataLunchArrangement"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/labelRatePerMile"
            app:layout_constraintWidth_percent="0.45" />

        <TextView
            android:id="@+id/dataLunchArrangement"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text=""
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/labelLunchArrangement"
            app:layout_constraintTop_toTopOf="@id/labelLunchArrangement"
            app:layout_constraintWidth_percent="0.55" />

        <TextView
            android:id="@+id/labelParkingOption"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="Parking Option:"
            android:textAlignment="viewEnd"
            app:layout_constraintEnd_toStartOf="@+id/dataParkingOption"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/labelLunchArrangement"
            app:layout_constraintWidth_percent="0.45" />

        <TextView
            android:id="@+id/dataParkingOption"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text=""
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/labelParkingOption"
            app:layout_constraintTop_toTopOf="@id/labelParkingOption"
            app:layout_constraintWidth_percent="0.55" />

        <TextView
            android:id="@+id/labelStatus"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="Status:"
            android:textAlignment="viewEnd"
            app:layout_constraintEnd_toStartOf="@+id/dataStatus"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/labelParkingOption"
            app:layout_constraintWidth_percent="0.45" />

        <TextView
            android:id="@+id/dataStatus"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text=""
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/labelStatus"
            app:layout_constraintTop_toTopOf="@id/labelStatus"
            app:layout_constraintWidth_percent="0.55" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@+id/labelStatus">

            <TextView
                android:id="@+id/apiResultTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="24sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnAccept"
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="@drawable/round_button"
                android:text="Accept" />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>
