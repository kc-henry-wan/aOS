<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColor"
android:clickable="true"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

            <TextView
                android:id="@+id/apiResultTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textStyle="bold" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/mylistRecycler"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="1dp" />

        <!-- ID Document Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Upload ID Document"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <ImageView
            android:id="@+id/idImageView"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:scaleType="centerCrop"
            android:background="@drawable/circle_background"
            android:layout_gravity="center"
            android:layout_marginBottom="8dp" />

        <Button
            android:id="@+id/uploadIdButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Upload ID"
            android:layout_gravity="center"
            android:layout_marginBottom="16dp" />

        <!-- Certificate Document Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Upload Certificate"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <ImageView
            android:id="@+id/certImageView"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:scaleType="centerCrop"
            android:background="@drawable/circle_background"
            android:layout_gravity="center"
            android:layout_marginBottom="8dp" />

        <Button
            android:id="@+id/uploadCertButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Upload Certificate"
            android:layout_gravity="center"
            android:layout_marginBottom="16dp" />

        <!-- License Document Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Upload License"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <ImageView
            android:id="@+id/licenseImageView"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:scaleType="centerCrop"
            android:background="@drawable/circle_background"
            android:layout_gravity="center"
            android:layout_marginBottom="8dp" />

        <Button
            android:id="@+id/uploadLicenseButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Upload License"
            android:layout_gravity="center"
            android:layout_marginBottom="16dp" />

        <!-- Submit Button -->
        <Button
            android:id="@+id/submitDocumentsButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Submit Documents"
            android:layout_marginTop="24dp" />
    </LinearLayout>
</ScrollView>
