<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColor"
android:clickable="true"
    android:padding="16dp" >

    <TextView
        android:id="@+id/labelJobID"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:text="Job ID:"
        android:textAlignment="viewEnd"
        app:layout_constraintEnd_toStartOf="@+id/dataJobID"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.45" />

    <TextView
        android:id="@+id/dataJobID"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:text=""
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/labelJobID"
        app:layout_constraintTop_toTopOf="@id/labelJobID"
        app:layout_constraintWidth_percent="0.55" />

    <TextView
        android:id="@+id/labelBranchName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:text="Branch Name:"
        android:textAlignment="viewEnd"
        app:layout_constraintEnd_toStartOf="@+id/dataBranchName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/labelJobID"
        app:layout_constraintWidth_percent="0.45" />

    <TextView
        android:id="@+id/dataBranchName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:text=""
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/labelBranchName"
        app:layout_constraintTop_toTopOf="@id/labelBranchName"
        app:layout_constraintWidth_percent="0.55" />

    <TextView
        android:id="@+id/labelAddress"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:text="Address:"
        android:textAlignment="viewEnd"
        app:layout_constraintEnd_toStartOf="@+id/dataAddress"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/labelBranchName"
        app:layout_constraintWidth_percent="0.45" />

    <TextView
        android:id="@+id/dataAddress"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:text=""
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/labelAddress"
        app:layout_constraintTop_toTopOf="@id/labelAddress"
        app:layout_constraintWidth_percent="0.55" />


    <GridView
        android:id="@+id/jobGridView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:horizontalSpacing="10dp"
        android:numColumns="3"
        android:stretchMode="columnWidth"
        android:verticalSpacing="10dp"
        app:layout_constraintTop_toBottomOf="@id/labelAddress" />

    <TextView
        android:id="@+id/labelRatePerMile"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:text="Rate Per Mile:"
        android:textAlignment="viewEnd"

        app:layout_constraintEnd_toStartOf="@+id/dataRatePerMile"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/jobGridView"
        app:layout_constraintWidth_percent="0.45" />

    <TextView
        android:id="@+id/dataRatePerMile"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:text=""
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/labelRatePerMile"
        app:layout_constraintTop_toTopOf="@id/labelRatePerMile"
        app:layout_constraintWidth_percent="0.55" />

    <TextView
        android:id="@+id/labelLunchArrangement"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:text="Lunch Arrangement:"
        android:textAlignment="viewEnd"

        app:layout_constraintEnd_toStartOf="@+id/dataLunchArrangement"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/labelRatePerMile"
        app:layout_constraintWidth_percent="0.45" />

    <TextView
        android:id="@+id/dataLunchArrangement"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:text=""
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/labelLunchArrangement"
        app:layout_constraintTop_toTopOf="@id/labelLunchArrangement"
        app:layout_constraintWidth_percent="0.55" />

    <TextView
        android:id="@+id/labelParkingOption"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:text="Parking Option:"
        android:textAlignment="viewEnd"
        app:layout_constraintEnd_toStartOf="@+id/dataParkingOption"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/labelLunchArrangement"
        app:layout_constraintWidth_percent="0.45" />

    <TextView
        android:id="@+id/dataParkingOption"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:text=""

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/labelParkingOption"
        app:layout_constraintTop_toTopOf="@id/labelParkingOption"
        app:layout_constraintWidth_percent="0.55" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/labelParkingOption">

        <Button
            android:id="@+id/btnApply"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@drawable/round_button"
            android:text="Apply" />

        <Button
            android:id="@+id/btnNegotiate"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@drawable/round_button"
            android:text="Negotiate" />

        <Button
            android:id="@+id/btnWithdraw"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@drawable/round_button"
            android:text="Withdraw" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>